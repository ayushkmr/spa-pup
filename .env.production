# Docker Compose Production Environment Variables

# Node Environment - Set to production
NODE_ENV=production

# Docker Images
BACKEND_IMAGE=ghcr.io/ayushkmr/spa-pup-backend:prod
FRONTEND_IMAGE=ghcr.io/ayushkmr/spa-pup-frontend:prod

# Database Configuration
DB_USERNAME=puppy
DB_PASSWORD=puppy_spa_production_password
DB_NAME=puppy_spa
DB_PORT=5432
DATABASE_URL=postgresql://puppy:puppy_spa_production_password@postgres:5432/puppy_spa?schema=public

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@puppyspa.com
PGADMIN_DEFAULT_PASSWORD=pgadmin_production_password
PGADMIN_PORT=5050

# API Configuration
API_PORT=3005
CORS_ORIGIN=true
HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=/api/

# CORS Configuration - Add your production domain
CORS_ORIGINS=https://your-domain.com

# Application URL
APP_URL=https://your-domain.com

# Database Migration Command
# Change this to 'false' after first deployment to prevent db resets
DB_RESET=true
BACKEND_COMMAND="npx prisma generate && npx prisma db push && npm run start:prod"
